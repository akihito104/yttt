<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <ImageView
        android:id="@+id/video_thumbnail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".55"
        app:layout_constraintDimensionRatio="h,16:9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/video_barrier"
        app:layout_constraintEnd_toStartOf="@id/video_channel"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintVertical_chainStyle="packed"
        tools:srcCompat="@drawable/baseline_smart_display_24"
        />
    <androidx.compose.ui.platform.ComposeView
        android:id="@+id/video_channel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/video_thumbnail"
        app:layout_constraintBottom_toTopOf="@id/video_startDateTime"
        app:layout_constraintStart_toEndOf="@id/video_thumbnail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside"
        />
    <TextView
        android:id="@+id/video_startDateTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintTop_toBottomOf="@id/video_channel"
        app:layout_constraintBottom_toTopOf="@id/video_barrier"
        app:layout_constraintStart_toStartOf="@id/video_channel"
        android:textSize="12sp"
        tools:text="2023/3/9(Thu) 18:00"
        />
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/video_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="video_thumbnail,video_startDateTime"
        tools:layout_editor_absoluteY="8dp"
        />
    <TextView
        android:id="@+id/video_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/video_barrier"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/video_thumbnail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="stream title"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
